/* components/commentList.wxss */
.comment {
    width: 100%;
    display: flex;
    align-items: flex-start;
}

.avatar {
    width: 55rpx;
    height: 55rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.comment-body {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.comment-content {
    display: flex;
    align-items: flex-start;
    margin-bottom: 10rpx;
}

.comment-info {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 0;
}

.nickname {
    font-size: 25rpx;
}

.seller-tag {
    display: inline-block;
    width: 30px;
    text-align: center;
    background-color: #000;
    color: #fff;
    border-radius: 5px;
    font-size: 12px;
    margin-left: 5px;
}

.comment-text {
    font-size: 20rpx;
    margin-top: 8rpx;
}

.comment-time {
    font-size: 18rpx;
    color: #999999;
    margin-top: 10rpx;
}

.like-info {
    flex: 0 0 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 15rpx;
}

.child-comments {
    margin-top: 10rpx;
    padding-left: 30rpx;
}

.view-all-replies {
    color: #598eff;
    cursor: pointer;
    font-size: 20rpx;
    align-self: flex-start;
    margin-left: 10rpx;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.view-all-comments {
    display: flex;
    color: #999999;
    cursor: pointer;
    font-size: 20rpx;
    align-items: center;
    justify-content: center;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}

.popup-comments-container{
    width: 100vw;
    height: 800rpx;
    padding: 15rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.all-comments{
    width: 100%;
    height: 700rpx;
    padding: 5rpx;
    box-sizing: border-box;
    overflow-y: auto;
}

.popup-scroll-view{
    height: 100%;
    --scroll-animation-duration: 600ms;
}

.comment-input-container {
    display: flex;
    align-items: center;
    padding: 10px;
    background: #FFFFFF;
}

.comment-input {
    flex-grow: 1;
    padding: 0 10px;
    border-radius: 20px;
    border: none;
    outline: none;
    background-color: #F2F2F7;
}

.send-btn {
    display: inline-block;
    margin-left: 10px;
    padding: 8px 16px;
    border-radius: 20px;
    background-color: #FFA500;
    color: white;
    font-weight: 600;
}