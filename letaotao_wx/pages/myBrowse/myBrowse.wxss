/* pages/myBrowse/myBrowse.wxss */
.browse-container {
    background-color: #fff;
}

.top-bar {
    display: flex;
    justify-content: flex-end;
    padding: 10px;
    font-size: 14px;
    border-bottom: 1px solid #eee;
}

.clear-history {
    color: #999;
    cursor: pointer;
}

.browse-content {
    padding: 10px;
}

.date-title {
    color: #999;
    font-size: 14px;
    margin-bottom: 5px;
}

.item-list {
    display: flex;
    flex-wrap: wrap;
}

.browse-item {
    flex: 0 1 33.333%;
    margin-bottom: 10px;
    text-align: center;
}

.item-image {
    width: 100%;
    height: 240rpx;
}

.item-price {
    color: #FF0000;
    font-size: 14px;
    margin-top: 5px;
}

.no-data{
    text-align: center;
}