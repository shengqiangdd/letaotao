/* pages/publish/publish.wxss */
page {
    background-color: #e1e1e2;
}

.top-bar {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    position: fixed;
    top: 0;
    right: 0;
    padding: 10px;
    z-index: 999;
}

.publish-btn {
    display: flex;
    flex-direction: row;
}

.save {
    margin-right: 20px;
    padding: 10px;
    border-radius: 45%;
    width: 50px;
    background-color: #e3e3e3;
}

.publish {
    padding: 10px;
    border-radius: 45%;
    width: 50px;
    text-align: center;
    background-color: #FD7E14;
    font-weight: bold;
}

.product-container {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    margin-top: 60px;
    padding: 10px;
}

.product-content {
    border-radius: 10px;
    background-color: #ffffff;
    box-sizing: border-box;
    padding: 10px;
}

.category-popup {
    padding: 20px;
}

.category-list {
    max-height: 50vh;
    overflow: auto;
}

.category-item {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}

.price-popup {
    padding: 20px;
    background-color: #fff;
}

.price-input {
    font-size: 24px;
    text-align: right;
    padding: 10px;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
}

.keyboard-container {
    display: flex;
}

.number-keyboard {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    flex: 1;
}

.operation-keyboard {
    display: flex;
    flex-direction: column;
    /* 分布对齐，以填满整个高度 */
    justify-content: space-between;
    margin-left: 15rpx;
}

.operation-keyboard .key {
    /* 使用 Flexbox 布局 */
    display: flex;
    /* 水平居中 */
    justify-content: center;
    /* 垂直居中 */
    align-items: center;
    /* 每个按键填满分配的空间 */
    flex-grow: 1;
    /* 为按键之间设置间隔 */
    margin-bottom: 10px;
    background-color: #f2f2f2;
    padding: 20px;
    border-radius: 4px;
}

.operation-keyboard .key:last-child {
    /* 清除最后一个按键的间隔 */
    margin-bottom: 0;
}

/* 保持数字键盘键的原有样式不变 */
.number-keyboard .key {
    text-align: center;
    padding: 20px;
    background-color: #f2f2f2;
    border-radius: 4px;
}