/* pages/search/search.wxss */
.search-page {
    padding: 10px;
    background-color: #ffffff; 
}

.history-box {
    margin-top: 20px;
    padding: 10px 0;
    display: flex;
    flex-wrap: wrap;
}

.history-item {
    display: inline-flex;
    align-items: center;
    background-color: #f0f0f0;
    border-radius: 20px;
    padding: 8px 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.history-item:not(:last-child) {
    margin-right: 15rpx;
}

.history-item text {
    font-size: 14px;
    color: #333;
}

.history-item t-icon {
    margin-left: 10px;
}