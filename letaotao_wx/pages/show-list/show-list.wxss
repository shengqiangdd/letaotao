/* pages/show-list/show-list.wxss */
.search {
    padding: 16rpx 32rpx;
}

.drop-menu {
    position: fixed;
    top: 0;
    z-index: 10;
    margin-top: 15rpx;
}

page .t-tabs__wrapper{
    --td-tab-track-color: #FD7E14;
    --td-tab-item-active-color: #000;
}

.scroll-view{
    margin-top: 10rpx;
    min-height: 70vh;
    max-width: 80vh;
    padding-bottom: 10rpx;
}

.products,.posts {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 60px;
    padding: 10px;
}

.product,.post {
    width: calc(50% - 5px);
    margin-bottom: 10px;
}

.product:nth-child(odd),.post:nth-child(odd) {
    margin-right: 10px;
}

.image-wrapper {
    width: 100%;
    height: 0;
    padding-top: 100%;
    position: relative;
    border-radius: 10rpx;
}

.image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.info{
    margin-top: 10rpx;
}

.post .info .title{
    margin-left: 10rpx;
}

.price-condition {
    display: flex;
    align-items: baseline;
    margin-top: 5px;
}

.price-symbol {
    font-size: 12px;
    color: #ff4444;
}

.product-price {
    font-size: 16px;
    color: #ff4444;
    margin-left: 2px;
}

.condition {
    font-size: 12px;
    color: #999;
    margin-left: 15rpx;
    margin-top: 5px;
}

.creater-info {
    display: flex;
    align-items: center;
    margin-top: 5px;
}

.creater-avatar {
    width: 25px;
    height: 25px;
    border-radius: 50%;
    margin-right: 5px;
}

.creater-nickname {
    font-size: 12px;
    color: #666;
}

.product:nth-last-child(-n+2),.post:nth-last-child(-n+2) {
    margin-bottom: 0;
}

.user-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 10px;
}

.avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
}

.user-info {
    flex: 1;
    margin-left: 10px;
}

.nickname {
    font-size: 16px;
    margin-bottom: 5px;
}

.follow-count {
    color: #999;
}

.follow-btn {
    display: flex;
    align-items: center;
    padding: 5px 10px;
    border-radius: 15px;
    background-color: #f0f0f0;
}

.followed-text {
    color: #999;
}

.no-more-data{
    text-align: center;
}