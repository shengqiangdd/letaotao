/* pages/confirmPurchase/confirmPurchase.wxss */
.confirm-purchase-container {
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    width: 100%;
}

.address-card {
    margin-bottom: 10px;
}

.product-card {
    background-color: #fff;
    padding: 10px;
    margin-bottom: 10px;
}

.title {
    font-weight: bold;
    margin-bottom: 10px;
}

.product-info,
.price-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 10px;
}

.product-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
}

.product-name {
    flex-grow: 1;
    margin-left: 10px;
}

.bottom-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    padding: 10px;
    width: 100%;
}

.total-price {
    font-size: 18px;
    color: #ff4500;
    padding-left: 15rpx;
}

.confirm-btn {
    width: 100px;
    margin-left: 0;
    margin-right: 60rpx;
    background-color: #ff4500;
    color: #fff;
    border-radius: 20px;
}