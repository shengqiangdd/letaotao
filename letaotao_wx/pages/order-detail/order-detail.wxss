/* pages/order-detail/order-detail.wxss */
.order-detail-page {
    height: 100vh;
    padding: 10px;
    background-color: #f5f5f5;
}

.card {
    height: 100%;
    background-color: #ffffff;
    margin-bottom: 10px;
    padding: 10px;
}

.card-section {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}

.product-image {
    width: 80px;
    height: 80px;
}

.product-info {
    flex: 1;
    display: flex;
    align-items: center;
    padding-left: 10px;
}

.product-desc{
    flex: 1;
}

.product-desc,
.section-label {
    color: #333333;
    font-weight: bold;
}

.section-label{
    width: 180rpx;
}

.section-content {
    color: #ff9900;
    font-weight: bold;
    text-align: right;
}

.card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 45rpx;
}

.button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 130rpx;
    height: 70rpx;
    padding: 0 10rpx;
    border-radius: 20rpx;
}

.contact-button {
    padding: 10rpx;
    background-color: #ffffff;
    flex-direction: column;
    border: 1px solid #cccccc;
}

.delete-button {
    
    background-color: #cccccc;
}

.review-button {
    background-color: #ff9900;
}