/* pages/product-detail/product-detail.wxss */
.product-detail {
    display: flex;
    flex-direction: column;
    padding: 10px;
}

.seller-info-box {
    position: fixed;
    top: 10rpx;
    left: 0;
    box-sizing: border-box;
    padding: 0 15rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
    z-index: 999;
}

.seller-info {
    display: flex;
    align-items: center;
}

.seller-avatar {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    margin-right: 10px;
}

.follow {
    display: flex;
    align-items: center;
    border: 1px solid #ccc;
    border-radius: 20px;
    padding: 5px 10px;
}

.follow .icon-plus {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.product-info {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-top: 100rpx;
    margin-bottom: 30rpx;
}

.price-content {
    margin-left: 10rpx;
}

.price-content .price-symbol{
    font-size: 12px;
    color: #FF4444;
}

.price-content .price-text{
    font-size: 24px;
    color: #FF4444;
}

.condition {
    font-size: 16px;
    font-weight: bold;
    font-style: italic;
    color: #999;
    margin-top: 5px;
    margin-right: 5px;
    margin-bottom: 5px;
}

.description {
    margin-top: 10rpx;
    margin-left: 10rpx;
    padding-bottom: 10px;
}

.product-images {
    width: 100%;
    height: 400rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-bottom: 20px;
}

.product-image {
    width: 100%;
    margin-bottom: 10px;
}

.comments-section {
    width: 100%;
    padding: 10px;
    margin-bottom: 85rpx;
    box-sizing: border-box;
}

.comments-header {
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
}

.comments-header .comment-count {
    font-weight: bold;
    margin-bottom: 15px;
}

.comment-input-container {
    display: flex;
    align-items: center;
}

.comment-input-container .comment-input {
    flex: 1;
    height: 40px;
    line-height: 40px;
    margin-right: 20px;
    padding-left: 20px;
    border-radius: 20px;
    background-color: #f9f9f9;
}

.comment-input-container .comment-input text {
    color: #666;
}

.scroll-view{
    margin-top: 5rpx;
    margin-left: 5rpx;
}

.buyer-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.footer-bar {
    display: flex;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 10px;
    background-color: #fff;
    border-top: 1px solid #eaeaea;
}

.action-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 70px;
}

.action-item text{
    color: #666;
}

.interaction{
    display: flex;
    align-items: center;
    padding: 12px;
    margin-left: auto;
    margin-right: 10px;
    border-radius: 20px;
    background-color: #FD7E14;
}

.interaction text{
    margin-left: 5px;
}