/* pages/community/community.wxss */
page{
    height: 100vh;
}
.top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 10px;
    background-color: #ffffff;
    z-index: 999;
}

.tabs {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
}

.tab {
    padding-bottom: 8px;
    margin: 0 15px;
    transition: all 0.3s;
}

.active {
    border-bottom: 2px solid #FD7E14;
}

.post-list {
    margin-top: 60px;
    padding-bottom: 60px;
}

.post {
    padding: 15px;
    border-bottom: 1px solid #e5e5e5;
}

/* 更新用户信息区域的样式 */
.post-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.user-info {
    display: flex;
    align-items: center;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
}

.user-info-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.nickname {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 4px;
}

.following {
    font-size: 14px;
    color: #999;
}

.follow {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f0f0f0;
    border-radius: 15px;
    padding: 5px 12px;
    margin-left: auto;
}

.follow .icon-jia {
    margin-right: 3px;
}

.title-text {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    padding-left: 50px;
}

.content-text {
    margin-bottom: 12px;
    padding-left: 50px;
}

.img-list {
    padding-left: 50px;
    display: flex;
    flex-wrap: wrap;
    /* 允许图片换行 */
}

.img-list image {
    width: calc(33.3333% - 4px);
    /* 使图片宽度足够小以适应三个及其间隙 */
    height: 100px;
    object-fit: contain;
    margin-right: 1px;
    margin-bottom: 1px;
    /* 为与下一行的图片保持间距 */
    border-radius: 4px;
}

.img-list image:nth-child(3n) {
    margin-right: 0;
    /* 一行中的最后一张图片不应有右边距 */
}

/* 更新互动区域的样式 */
.post-footer {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 10rpx;
}

.interactions {
    display: flex;
    margin-right: 25rpx;
}

.interaction {
    display: flex;
    align-items: center;
    margin-left: 25px;
}

.interaction text {
    margin-left: 5px;
}

.no-data{
    text-align: center;
}